<!-- <h1>Codeial Home page</h1> -->
<div id="home-container">
    

    <section id="feed-posts">
        <h4>Posts</h4>
        <form action="/posts/create" id="new-post-form" method="POST">
            <textarea name="content" cols="70" rows="3" placeholder="Type Here..." id="post-add-text"></textarea>
            <input type="submit" value="Post">
        </form>
        <% if(locals.user){ %>
            <div id="posts-list-container">
                <ul>
                    <% for(post of posts){ %>

                        <%- include('_post'); %>


                            <%} %>
                </ul>
            </div>
            <% } %>
    </section>

    <aside>
  
     <section id="friend-list">
        <h4>Users</h4>
        <ul>
            <% for(u of all_users){ %>

                <li>
                    <p><a href="/users/profile/<%=u.id %>">
                            <%= u.accountHolder %>
                        </a></p>
                        
                </li>
                <%} %>
        </ul>
    </section> 
    <%- include('_chatbox') -%>
    
</aside>
</div>


